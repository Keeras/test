<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/yourAuctionWinBidsImgPhoto"
        android:src="@drawable/ic_launcher_background"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCYourAuctionWinBidsTitle"
        android:layout_toRightOf="@+id/yourAuctionWinBidsImgPhoto"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:text="Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvYourAuctionWinBidsPrice"
        android:layout_toRightOf="@+id/yourAuctionWinBidsImgPhoto"
        android:layout_below="@+id/tvCYourAuctionWinBidsTitle"

        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:text="Your Bidded Amount:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvYourAuctionWinMarketValue"
        android:layout_toRightOf="@+id/yourAuctionWinBidsImgPhoto"
        android:layout_below="@+id/tvYourAuctionWinBidsPrice"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:text="Amount From Database"/>

</RelativeLayout>